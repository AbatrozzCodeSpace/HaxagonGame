<project name="AI-project" default="build">
	<property name="BIN_DIR" value="bin/" />
	<property name="SRC_DIR" value="src/" />
	<property name="MAIN_CLASS" value="Hexxagon" />

	<target name="clean">
		<delete>
			<fileset dir="${BIN_DIR}" includes="*.class" />
		</delete>
	</target>
	<target name="build">
		<javac destdir="${BIN_DIR}" srcdir="${SRC_DIR}" />
	</target>
	<target name="run">
		<java fork="true"
			classname="${MAIN_CLASS}"
			classpath="${BIN_DIR}">
		</java>
	</target>
</project>
